# Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_NAME=dwigo
DB_PASSWORD=your_postgres_password_here
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# JWT Secret (for authentication)
# Generate a random string for production: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin API Token (for admin ingestion review)
# Generate a random string for production: openssl rand -base64 32
ADMIN_API_TOKEN=your-admin-token-here-change-this

# Server Port
PORT=3001

# Enable Scheduler (set to 'true' to enable cron jobs in API process)
ENABLE_SCHEDULER=false

# Job Worker Concurrency (number of concurrent BullMQ workers)
JOB_WORKER_CONCURRENCY=5

# Deal Quality Thresholds (0.0 to 1.0)
# MIN_DEAL_QUALITY_SCORE: Minimum quality score for promotion (default: 0.4 = 40%)
# AUTO_REJECT_QUALITY_SCORE: Auto-reject deals below this score (default: 0.25 = 25%)
MIN_DEAL_QUALITY_SCORE=0.4
AUTO_REJECT_QUALITY_SCORE=0.25
